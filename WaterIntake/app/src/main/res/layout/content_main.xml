<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >

        <LinearLayout
        android:layout_width="165dp"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:layout_below="@id/add_minus"
        android:background="@drawable/empty_glass"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:paddingTop="50dp">

        <ImageButton
            android:id="@+id/p10"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/p9"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/p8"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/p7"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/p6"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>
        <ImageButton
            android:id="@+id/p5"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/p4"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"/>

        <ImageButton
            android:id="@+id/p3"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/p2"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/transparent"
            android:visibility="invisible"
            />

        <ImageButton
            android:id="@+id/p1"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@android:color/transparent"
            android:background="@drawable/bottom_rounded"
            android:visibility="invisible"
            />


    </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/add_minus"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundcorner_red"
            android:text="-"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:layout_marginRight="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="16dp"

                android:layout_marginRight="30dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                    android:id="@+id/glassCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  0"
                    android:textSize="18sp"
                    android:padding="2dp"
                    android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/lblslash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="18sp"
                        android:padding="2dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/lblTarget"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textSize="18sp"
                        android:padding="2dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/lblglass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cups"
                        android:textSize="18sp"
                        android:padding="2dp"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/lblMiliLiters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="     0 "
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:gravity="center_horizontal"/>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ml"
                            android:textSize="12sp"
                            android:padding="2dp"
                            android:gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>

        <Button
            android:id="@+id/add_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/roundcorner_blue"
            android:text="+"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"/>
    </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>